section.homepage-banner.background-video
    .homepage-hero-module
        .video-container
            .filter
            video.fillWidth(autoplay='', loop='', muted)
                source(src='assets/videos/video-4.mp4', type='video/mp4')
    .homepage-banner-warpper
        .homepage-banner-content
            .bg-image
                img.img-responsive(src="assets/images/background-full/homepage-2.jpg" alt="")
            .group-title.wow.fadeInDown(data-wow-delay="1s")
                h1.title WELCOME TO GAMBA RESTAURANT
                p.text The Seafood Restaurant has been voted by locals as "Best in the area" year after year. We actively seek out the freshest in regional seafood and produce our restaurant is expanding.
            .group-btn.wow.fadeInUp(data-wow-delay="1s")
                a.btn.btn-left.btn-maincolor(href="#") Resever Now 
                a.btn.btn-right.btn-transparent(href="#")  purchase now
            .btn-click.btn-play.wow.zoomIn(data-wow-delay="1.8s")
                i.icons.fa.fa-play
            .btn-click.btn-pause.show-video
                i.icons.fa.fa-pause
